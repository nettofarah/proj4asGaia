<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx">

	<fx:Script>
		<![CDATA[
			import br.ufla.lemaf.coordinates.model.Point;
			
			[Bindable]
			public var point:br.ufla.lemaf.coordinates.model.Point;
		]]>
	</fx:Script>
	
	<s:HGroup width="100%" >
		<s:VGroup width="100%">
			<s:Label text="Longitude" />
			<s:TextInput width="100%" id="xText" text="{point.x}" />
		</s:VGroup>
		
		<mx:Spacer width="10" />
		
		<s:VGroup width="100%">
			<s:Label text="Latitude" />
			<s:TextInput width="100%" id="yText" text="{point.y}" />
		</s:VGroup>
	</s:HGroup>
	
</s:Group>
